# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Neon DB)
# Format: postgres://user:password@host/database?sslmode=require
DATABASE_URL=postgres://user:pass@host/db?sslmode=require

# SMTP Email Configuration (Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=pts.noreply@prototechsolutions.com
SMTP_PASS=your_password_here
SMTP_FROM=pts.noreply@prototechsolutions.com

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
ADMIN_SECRET_TOKEN=generate_a_secure_random_token_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Troubleshooting
# If you see "Connection timeout", ensure SMTP_PORT is 587 and SMTP_SECURE is false.
# If you see "Self signed certificate", ensure ?sslmode=require is in DATABASE_URL.
